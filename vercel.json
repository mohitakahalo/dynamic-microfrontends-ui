{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "shell-app/.next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "builds": [
    {
      "src": "cart-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "checkout-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "shell-app/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/_next/static/(.*)",
      "dest": "/shell-app/_next/static/$1"
    },
    {
      "src": "/cart/(.*)",
      "dest": "/cart-app/dist/$1"
    },
    {
      "src": "/checkout/(.*)",
      "dest": "/checkout-app/dist/$1"
    },
    {
      "src": "/cartApp.js",
      "dest": "/cart-app/dist/cartApp.js",
      "headers": {
        "content-type": "application/javascript"
      }
    },
    {
      "src": "/checkoutApp.js",
      "dest": "/checkout-app/dist/checkoutApp.js",
      "headers": {
        "content-type": "application/javascript"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/shell-app/$1"
    }
  ]
}
